<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>database.Aeropuerto</class>
        <class>database.Asiento</class>
        <class>database.Avion</class>
        <class>database.Ciudad</class>
        <class>database.Cliente</class>
        <class>database.Pais</class>
        <class>database.Pasajero</class>
        <class>database.PasajeroAsiento</class>
        <class>database.PasajeroReserva</class>
        <class>database.Reserva</class>
        <class>database.ReservaVuelo</class>
        <class>database.TarjetaDeCredito</class>
        <class>database.Vuelo</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
